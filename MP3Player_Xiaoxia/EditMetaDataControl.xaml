<UserControl x:Class="MP3Player_Xiaoxia.EditMetaDataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MP3Player_Xiaoxia"
             mc:Ignorable="d" Height="20" Width="400">
    <Grid Background="White">
        <Label x:Name="LblMetaHeader" Content="Meta-Header" HorizontalAlignment="Left" FontSize="16" VerticalAlignment="Center" Width="100" Height="30"/>
        <TextBox x:Name="TextBoxMetaValue" HorizontalAlignment="Left" FontSize="16" TextWrapping="Wrap" Text="Meta-Value" Width="300" Height="30" Margin="100,0,0,0" TextChanged="TextBox_TextChanged"/>
    </Grid>
</UserControl>
