<UserControl x:Class="MP3Player_Xiaoxia.EditMetaDataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MP3Player_Xiaoxia"
             mc:Ignorable="d" Height="125" Width="390">
    <Grid Background="White" Margin="0,0,-16,-20" >
        <Label x:Name="LblMetaHeader" Content="Meta-Header" HorizontalAlignment="Left" FontSize="16" VerticalAlignment="Top" Width="165" Height="36" Margin="10,0,0,0"/>
        <TextBox x:Name="TextBoxMetaValue" HorizontalAlignment="Left" FontSize="16" TextWrapping="Wrap" Text="Meta-Value" Width="380" Height="36" Margin="10,35,0,20" TextChanged="TextBox_TextChanged"/>
    </Grid>
</UserControl>
