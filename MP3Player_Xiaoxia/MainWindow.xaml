<Window x:Class="MP3Player_Xiaoxia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MP3Player_Xiaoxia"
        mc:Ignorable="d"
        Title="Xiaoxia MP3 Player" Height="460" Width="764">
    <StackPanel>
        <Menu x:Name="menu" Height="33" HorizontalAlignment="Left" Width="800">
            <MenuItem x:Name="MenuFile" Header="File" Width="60" Margin="5" Click="MenuFile_Click">
                <MenuItem x:Name="MenuItemOpen" Header="Open MP3" />
                <Separator />
                <MenuItem Header="Tag Current MP3" />
                <Separator />
                <MenuItem Header="Exit" />
            </MenuItem>
            <MenuItem Header="Edit" Width="60" Margin="5">
                <MenuItem Header="Edit" />
            </MenuItem>
            <MenuItem Header="Media" Width="60" Margin="5">
                <MenuItem Header="Play" />
                <Separator />
                <MenuItem Header="Pause" />
                <Separator />
                <MenuItem Header="Stop" />
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="400"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="SideBar" Width="89*" />
                <ColumnDefinition Width="711*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Background="#FF98E0CE">
                <Button x:Name="BtnFile" BorderBrush="{x:Null}" Height="60" Click="BtnFile_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="/open_file.png" Stretch="Fill"/>
                    </Button.Background>
                </Button>
                <Button x:Name="BtnPlay" BorderBrush="{x:Null}" Height="60" >
                    <Button.Background>
                        <ImageBrush ImageSource="/musicnote.png"/>
                    </Button.Background>
                </Button>
                <Button x:Name="BtnEdit" BorderBrush="{x:Null}" Height="60" >
                    <Button.Background>
                        <ImageBrush ImageSource="/edit.png"/>
                    </Button.Background>

                </Button>
                <Label x:Name="LblTest" Content="Label"/>

            </StackPanel>

            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1">
                <StackPanel x:Name="PlayPanel" Margin="0,351,0,9" Background="#FF0096B3" Orientation="Horizontal"  >
                    <Button x:Name="btnPlay"  Width="60" HorizontalAlignment="Left" Click="btnPlay_Click" >
                        <Button.Background>
                            <ImageBrush ImageSource="/media-play.png"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="btnPause" Width="60" Click="btnPause_Click"  >
                        <Button.Background>
                            <ImageBrush ImageSource="/pause-icon.png"/>
                        </Button.Background>

                    </Button>
                    <Button x:Name="btnStop" Width="49" Click="btnStop_Click" >
                        <Button.Background>
                            <ImageBrush ImageSource="/stop-icon.png"/>
                        </Button.Background>
                    </Button>
                    <Label Width="79" Content="Time" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20,0,0,0" ></Label>
                    <Slider Width="494" VerticalAlignment="Center"/>

                </StackPanel>
            </Border>
            <MediaElement x:Name="Player" LoadedBehavior="Manual" HorizontalAlignment="Left" Height="338" Margin="0,10,0,0" VerticalAlignment="Top" Width="675" Grid.Column="1"/>

        </Grid>




    </StackPanel>

</Window>

